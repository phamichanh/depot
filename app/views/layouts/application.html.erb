<!DOCTYPE html>
<html>
  <head>
    <title>Depot</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='<%= controller.controller_name %>' >
    <div id="banner">
      <%= image_tag("logo.png") %>
      <%= @page_title || "Ich Anh Bookshelf" %>
    </div>

    <div id="columns">
      <div id="side">
        <% if @cart %>
            <div id="cart">
              <%= render @cart %>
            </div>
        <% end %>
        <ul>
          <li><a href="http://localhost:3000/">Home</a></li>
          <li><a href="https://www.../fag">Questions</a></li>
          <li><a href="https://www.../news">News</a></li>
          <li><a href="https://www.../contact">Contact</a></li>
        </ul>
        <p><%= Time.now() %></p>
      </div>
      <div id="main">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
